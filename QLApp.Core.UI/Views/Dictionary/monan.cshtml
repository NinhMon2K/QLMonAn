@{
    Layout = "_Layout";

}
<link href="~/css/view/dictionary/monan.css" rel="stylesheet" />

<div class="top-content">
    <div class="header__search__bar bl">
        <div class="header__search__bar__icon">
            <i class="ti-filter"></i>
        </div>
        <div class="header__search__bar__input">
            <input type="text" placeholder="Điều kiện lọc">
        </div>

        <div class="header__search__bar__modal">

        </div>

    </div>
    <div class="header__search__bar search">
        <div class="header__search__bar__icon">
            <i class="fas fa-search"></i>
        </div>
        <div class="header__search__bar__input">
            <input type="text" placeholder="Tìm kiếm">
        </div>

        <div class="header__search__bar__modal">

        </div>

    </div>
    <div class="container-button">
        <div class="btn-left">
            <button class="btn btn_delete">Delete</button>
        </div>
        <div class="btn-right">
            <button class="btn btn_add" id="btn_add">Add</button>
        </div>
    </div>
</div>
<div class="container-table">
    <table id="table_id" class="display">
        <thead>
            <tr>
                <th class="text-center ck_All">
                    <input type="checkbox" name="name" class="check_item" />
                </th>
                <th class="stt">STT </th>
                <th class="img-ma">Hình ảnh</th>
                <th class="name-ma">Tên món ăn</th>
                <th class="loai-ma">Loại món</th>
                <th class="mota-ma">Mô tả</th>
                <th class="cachlam-ma">Cách làm</th>
                <th class="noiban-ma">Nơi bán</th>
                <th class="video-ma">Video</th>
                <th class="btn_sua"></th>
                <th class="btn_xoa"></th>
            </tr>
        </thead>
        <tbody class="customer-monan">
        </tbody>
    </table>
</div>
<div class="container-phantrang">
    <nav aria-label="Page navigation example">
        <ul class="pagination" id="pagination">
        </ul>
    </nav>

</div>
<div id="dialog-form" title="Đăng kí">
    <form class="form" id="form-1" action="" method="POST">

        <div class="page-content">
            <div class="page_row page_row-1">
                <div class="box box_name">
                    <div class="box_left">
                        <label for="name">Tên món ăn</label>
                    </div>
                    <div class="box_right form-group">
                        <input type="text" name="name_ma" id="name_ma" class="text ui-widget-content ui-corner-all form-control">
                        <span class="form-message"></span>
                    </div>
                </div>
                <div class="box box_hinhanh_ma">
                    <div class="box_left">

                        <label for="name">Hình ảnh:</label>

                    </div>
                    <div class="box_right form-group">
                        <input type="file" name="" id="hinhanh_ma" class="form-control text ui-widget-content ui-corner-all ">
                        <span class="form-message"></span>
                    </div>
                </div>

                <div class="box box_cachlam_ma">
                    <div class="box_left">
                        <label for="email">Cách làm:</label>

                    </div>
                    <div class="box_right form-group">
                        <textarea type="text" name="cachlam_ma" id="cachlam_ma" class="text ui-widget-content ui-corner-all "> </textarea>
                        <span class="form-message"></span>
                    </div>
                </div>
                <div class="box box_video_ma">
                    <div class="box_left">
                        <label for="email">Video:</label>

                    </div>
                    <div class="box_right form-group">
                        <input type="text" name="video_ma" id="video_ma" class="form-control text ui-widget-content ui-corner-all ">
                        <span class="form-message"></span>
                    </div>
                </div>
                <div class="box box_noiban_ma">
                    <div class="box_left">
                        <label for="password">Nơi bán:</label>

                    </div>
                    <div class="box_right form-group">
                        <input type="text" name="noiban_ma" id="noiban_ma" class="text ui-widget-content ui-corner-all form-control">
                        <span class="form-message"></span>
                    </div>
                </div>
                <div class="box box_loai_ma">
                    <div class="box_left">

                        <label for="name">Loại món:</label>

                    </div>
                    <div class="box_right form-group">
                        <select id="lt_type_dish_filter" placeholder="Select size..." style="width: 100%;">
                               
                            </select>
                       
                    </div>
                </div>
                <div class="box box_mota">
                    <div class="box_left">

                        <label for="name">Mô tả:</label>

                    </div>
                    <div class="box_right form-group">
                        <textarea type="text" name="mota_ma" id="mota_ma" class="mota_ma text ui-widget-content ui-corner-all"> </textarea>
                        <span class="form-message"></span>
                    </div>
                </div>

            </div>

        </div>
        <div class="page-footer">
            <div class="footer-content" style="display:flex">
                <div class="left-footer btn_left">
                    <button type="button" id="btn_close" class="btn">Đóng</button>
                </div>
                <div class="right-footer">
                    <button type="button" class="btn" id="btn_luu">Lưu</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/js/view/dictionnary/monan.js"></script>